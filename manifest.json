{
  "manifest_version" :2,
  "name" : "Personalized New Tab",
  "description" :"Customize new tab experience to stay update on favorite news",
  "permissions": ["storage"],
  "version" :"1.0",
  "browser_action" : {
    "default_title" : "Personalized New Tab"
  },
  "background": {
     "persistent": false,
     "scripts": [ "jquery-3.3.1.js","js/app.js" ]
  },

  "content_scripts": [{
     "js": ["jquery-3.3.1.js"],
     "matches": ["http://*/*", "https://*/*"]
   }],

  "icons": { "16": "icon16x16.png",
           "32": "icon32x32.png"},

"content_security_policy": "script-src 'self' https://dailyverses.net; object-src 'self'",
  "chrome_url_overrides": {
      "newtab": "index.html"
   },
   "offline_enabled": true
}

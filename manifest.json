{
  "manifest_version" :2,
  "name" : "Personalized New Tab",
  "description" :"Customize new tab experience to stay update on favorite news",
  "permissions": ["storage"],
  "version" :"1.0",
  "browser_action" : {
    "default_title" : "Personalized New Tab"
  },
  "background": {
     "persistent": false,
     "scripts": [ "js/app.js" ]
  },

  "icons": { "16": "icon16x16.png",
           "32": "icon32x32.png"},

  "chrome_url_overrides": {
      "newtab": "index.html"
   },
   "offline_enabled": true
}

{
  "manifest_version" :2,
  "name" : "Personalized New Tab",
  "description" :"Customize new tab experience to stay update on favorite news",
  "permissions": ["storage","tabs"],
  "version" :"1.2",
  "options_page": "options.html",


  "browser_action" : {
    "default_title" : "Personalized New Tab",
    "default_popup" : "popup.html"
  },
  "content_scripts": [
  {
    "matches": ["https://dailyverses.net/*"],
    "css": ["css/index.css","css/todo.css"],
    "js": ["js/jquery-3.3.1.js","js/app.js", "js/purify.js" ]
  }
],
  "icons": { "16": "icon16x16.png",
    "32": "icon32x32.png"},
  "chrome_url_overrides": {
      "newtab": "index.html"
   },
   "content_security_policy": "script-src 'self' https://dailyverses.net; object-src 'self'",
   "offline_enabled": true
}
